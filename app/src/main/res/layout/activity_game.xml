<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/xTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X:"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/yTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/xTV"
            android:text="Y:"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/zTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/yTV"
            android:text="Z:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/xValueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/xTV"
            android:layout_marginStart="20dp"
            android:text="X Values"
            android:textSize="16sp"
            android:textColor="@android:color/holo_red_dark" />
        <TextView
            android:id="@+id/yValueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xValueView"
            android:layout_toEndOf="@id/yTV"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Y Values"
            android:textSize="16sp"
            android:textColor="@android:color/holo_green_dark"/>
        <TextView
            android:id="@+id/zValueView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yValueView"
            android:layout_toEndOf="@id/zTV"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:text="Z Values "
            android:textSize="16sp"
            android:textColor="@android:color/holo_blue_dark"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="DIRECTION"
        android:textSize="32sp" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:text="Start measuring" />

</RelativeLayout>